<h2><%= @hotel.name %></h2>

<p>Address:<%= @hotel.address %></p>
<p>Tel:<%= @hotel.tel %></p>

<p>About <%= @hotel.name %> </p>
<p><%= @hotel.description %></p>


<%= image_tag(@hotel.image_url, :alt => "rss feed") %>


<%= form_tag new_reservation_path do %>
  <%= hidden_field_tag :hotel_id, @hotel.id %>
  <input type="submit" value="Book this hotel">
<%end %>

</br>

<h3>Most Recent Reviews... </h3>
</br>
<% @all_reviews_for_this_hotel.each do |review| %>
<h4><%= review.title %></br></h4>
<i><%= review.content %></br></i>
</br>
<% end %></br>
